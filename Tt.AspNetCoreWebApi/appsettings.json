{
  "AllowedHosts": "*",
  "Notification": {
    "EnableEmailNotification": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "C:\\Logs\\TT.AspNetCoreWebApi-{Date}.txt",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] {SourceContext}.{Method} {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  }
}
